<p id="notice"><%= notice %></p>

<h1>Shoplists</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoplists.each do |shoplist| %>
      <tr>
        <td><%= shoplist.content %></td>
        <td><%= shoplist.price %></td>
        <td><%= link_to 'Show', shoplist %></td>
        <td><%= link_to 'Edit', edit_shoplist_path(shoplist) %></td>
        <td><%= link_to 'Destroy', shoplist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shoplist', new_shoplist_path %>
